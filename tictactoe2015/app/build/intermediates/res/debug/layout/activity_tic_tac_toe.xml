<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tictactoe.app.TicTacToe" >

    <EditText
        android:id="@+id/tvplayerone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/tvplayertwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvplayerone"
        android:layout_below="@+id/tvplayerone"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:inputType="textCapWords" />

    <Button
        android:id="@+id/btnstartgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvplayertwo"
        android:layout_below="@+id/tvplayertwo"
        android:layout_marginTop="55dp"
        android:text="Start Game" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvplayertwo"
        android:layout_below="@+id/tvplayerone"
        android:layout_marginTop="40dp"
        android:text="Player Two [O]"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvplayerone"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="50dp"
        android:text="Player One [X]"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
