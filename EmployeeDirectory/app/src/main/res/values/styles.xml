<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--  -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!--  -->
    </style>

    <style name="createform" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    
     <style name="createformimg" parent="createform">
        <item name="android:layout_height">70dp</item>
    </style>
    

    <style name="details" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="details_id" parent="details">
        <item name="android:layout_weight">0.35</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="details_value" parent="details">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="edit_id" parent="details">
        <item name="android:layout_weight">0.75</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    
    <style name="edit_value" parent="details">
        <item name="android:layout_weight">0.35</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>
    

</resources>